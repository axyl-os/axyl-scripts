#!/bin/env bash

source colors

FONT="JetBrainsMono Nerd Font:size=12"

[[ -z "$DISPLAY" ]] && exit 1
choice=$(echo -e "0: Now\n1: Current Window\n2: Selected Area" | dmenu -c -i -l 10 -nb "$bg" -nf "$fg" -sb "$altbg" -sf "$fg" -fn "$FONT" -p "Screenshot:" | cut -d ':' -f 1)
[[ -z "$choice" ]] && exit 1
case "$choice" in
  0) takeshot --now  ;;
  1) takeshot --win  ;;
  2) takeshot --area ;;
esac

