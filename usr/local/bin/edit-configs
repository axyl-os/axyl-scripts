#!/bin/env bash

source colors

# default editor
DEF_EDITOR="nvim"

FONT="Source Code Pro Medium:size=12"

# list of configs
if [[ "$DESKTOP_SESSION" == "Qtile" ]]; then
  CONFIG="$HOME/.config/qtile/alacritty/alacritty.yml"
  declare -a options=( 
  "Alacritty - $HOME/.config/qtile/alacritty/alacritty.yml"
  "Alacritty (Fonts) - $HOME/.config/qtile/alacritty/fonts.yml"
  "Autostart - $HOME/.config/qtile/scripts/autostart.sh"
  "Feh (Wallpaper Background) - $HOME/.config/qtile/scripts/.fehbg"
  "Fish - $HOME/.config/fish/config.fish"
  "Picom - $HOME/.config/qtile/picom.conf"
  "Qtile - $HOME/.config/qtile/config.py"
  "Vim - $HOME/.vimrc"
  )
elif [[ "$DESKTOP_SESSION" == "dwm" ]]; then
  CONFIG="$HOME/.dwm/alacritty/alacritty.yml"
  declare -a options=( 
  "Alacritty - $HOME/.dwm/alacritty/alacritty.yml"
  "Alacritty (Fonts) - $HOME/.dwm/alacritty/fonts.yml"
  "Autostart - $HOME/.dwm/scripts/autostart.sh"
  "Feh (Wallpaper Background) - $HOME/.dwm/.fehbg"
  "Fish - $HOME/.config/fish/config.fish"
  "Picom - $HOME/.dwm/picom.conf"
  "dwm - /opt/axyl-dwm/config.def.h"
  "Vim - $HOME/.vimrc"
  )
elif [[ "$DESKTOP_SESSION" == "bspwm" ]]; then
  CONFIG="$HOME/.config/bspwm/alacritty/alacritty.yml"
  declare -a options=( 
  "Alacritty - $HOME/.config/bspwm/alacritty/alacritty.yml"
  "Alacritty (Fonts) - $HOME/.config/bspwm/alacritty/fonts.yml"
  "BSPWM - $HOME/.config/bspwm/bspwmrc"
  "SXHKD - $HOME/.config/sxhkd/sxhkdrc"
  "Feh (Wallpaper Background) - $HOME/.config/bspwm/.fehbg"
  "Fish - $HOME/.config/fish/config.fish"
  "Picom - $HOME/.config/bspwm/picom.conf"
  "Vim - $HOME/.vimrc"
  )
elif [[ "$DESKTOP_SESSION" == "Xmonad" ]]; then
  CONFIG="$HOME/.xmonad/alacritty/alacritty.yml"
  declare -a options=( 
  "Alacritty - $HOME/.xmonad/alacritty/alacritty.yml"
  "Alacritty (Fonts) - $HOME/.xmonad/alacritty/fonts.yml"
  "Autostart - $HOME/.xmonad/bin/autostart.sh"
  "Feh (Wallpaper Background) - $HOME/.xmonad/.fehbg"
  "Fish - $HOME/.config/fish/config.fish"
  "Picom - $HOME/.xmonad/picom.conf"
  "Xmonad - $HOME/.xmonad/xmonad.hs"
  "Vim - $HOME/.vimrc"
  )
elif [[ "$DESKTOP_SESSION" == "spectrwm" ]]; then
  CONFIG="$HOME/.config/spectrwm/alacritty/alacritty.yml"
  declare -a options=(
  "Alacritty - $HOME/.config/spectrwm/alacritty/alacritty.yml"
  "Alacritty (Fonts) - $HOME/.config/spectrwm/alacritty/fonts.yml"
  "Autostart - $HOME/.config/spectrwm/autostart.sh"
  "Feh (Wallpaper Background) - $HOME/.config/spectrwm/.fehbg"
  "Fish - $HOME/.config/fish/config.fish"
  "Picom - $HOME/.config/spectrwm/picom.conf"
  "Spectrwm - $HOME/.config/spectrwm/spectrwm.conf"
  "Baraction - $HOME/.config/spectrwm/baraction.sh"
  "Vim - $HOME/.vimrc"
  )
elif [[ "$DESKTOP_SESSION" == "LeftWM" ]]; then
  CONFIG="$HOME/.config/leftwm/alacritty/alacritty.yml"
  declare -a options=(
  "Alacritty - $HOME/.config/leftwm/alacritty/alacritty.yml"
  "Alacritty (Fonts) - $HOME/.config/leftwm/alacritty/fonts.yml"
  "Fish - $HOME/.config/fish/config.fish"
  "LeftWM - $HOME/.config/leftwm/config.toml"
  "Vim - $HOME/.vimrc"
  )
elif [[ "$DESKTOP_SESSION" == "i3" ]]; then
  CONFIG="$HOME/.config/i3/alacritty/alacritty.yml"
  declare -a options=(
  "Alacritty - $HOME/.config/i3/alacritty/alacritty.yml"
  "Alacritty (Fonts) - $HOME/.config/i3/alacritty/fonts.yml"
  "Autostart - $HOME/.config/i3/bin/autostart.sh"
  "Fish - $HOME/.config/fish/config.fish"
  "Picom - $HOME/.config/i3/picom.conf"
  "i3wm - $HOME/.config/i3/config"
  "Vim - $HOME/.vimrc"
  )
fi

# creates the menu
choice=$(printf '%s\n' "${options[@]}" | sort -u | dmenu -c -i -l 10 -nb "$bg" -nf "$fg" -sb "$altbg" -sf "$fg" -fn "$FONT" -p 'Edit Config:')

# opens the selected config file with vim
# exits otherwise
if [ "$choice" ]; then
    cfg=$(printf '%s\n' "${choice}" | awk '{print $NF}')
    alacritty --config-file "$CONFIG" -e $DEF_EDITOR "$cfg"
else
    echo "Exiting..."; exit 1
fi
